{
    "meta": {
        "label": "Authorization Code Flow (3-legged OAuth)",
        "description": "",
        "icon": "icon-linkedin"
    },
    "defaultDefinableInline": false,
    "defaultDefinableAtProjectLevel": true,
    "pluginParams": [],
    "params": [
        {
            "name": "linkedin-oauth",
            "type": "CREDENTIAL_REQUEST",
            "label": "Authorization Code Flow",
            "credentialRequestSettings": {
                "type": "OAUTH2",
                "authorizationEndpoint": "https://www.linkedin.com/oauth/v2/authorization",
                "tokenEndpoint": "https://www.linkedin.com/oauth/v2/accessToken",
                "scope": "r_ads", 
                "response_type":"code"
            },
            "mandatory": true
        },
        {
            "name": "state",
            "label": "state",
            "type": "STRING",
            "description": "A unique string value of your choice that is hard to guess. Used to prevent CSRF. For example, state=DCEeFWf45A53sdfKef424.",
            "mandatory": true
        }
    ]
}